<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resetPasswordPage">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="783dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/txv_reset_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="Verify Email"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_reset_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Email of your account"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txv_reset_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="Verify Phone number"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_reset_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Phone number of your account"
            android:inputType="phone" />

        <TextView
            android:id="@+id/txv_reset_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="Create a new password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_reset_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txv_reset_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="Confirm password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_reset_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_reset_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Submit NewPassword" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>